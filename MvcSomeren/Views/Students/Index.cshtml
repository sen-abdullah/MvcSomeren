@model List<MvcSomeren.Models.Student>

@{
    ViewData["Title"] = "Students Page";
}

<div class="text-center">
    <h1 class="display-4">Students</h1>
    <a href="/Students/Create" class="button-create" role="button"><span class="text">Create new Student</span><span>Have Fun!</span></a>
    <p>Number of students in the list: @Model.Count</p>
    <form method="get" action="@Url.Action("Filter")">
        <div class="form-group py-2">
            <label for="lastName">Last Name:</label>
            <input type="text" class="form-control" id="lastName" name="lastName" />
        </div>
        <button type="submit" class="btn btn-primary">Filter</button>
    </form>
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Student Number</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone Number</th>
            <th>Class</th>
            <th>Voucher</th>
            <th>RoomId</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @{
            foreach (var student in Model)
            {
                <tr><td>@student.StudentNumber</td>
                    <td>@student.StudentFirstName</td>
                    <td>@student.StudentLastName</td>
                    <td>@student.StudentPhoneNumber</td>
                    <td>@student.StudentClass</td>
                    <td>@student.Voucher</td>
                    <td>@student.RoomId</td>
                    <td>
                        <a href="/Students/Edit/@student.StudentNumber" class="button-edit">Edit</a>
                        <a href="/Students/Delete/@student.StudentNumber" class="button-delete">Delete</a> 
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
</div>