@model MvcSomeren.Models.Drink

@{
    ViewData["Title"] = "Delete Drink";
}

<div>
    <div class="d-flex justify-content-center mr-6 my-lg-5">
        <h4>Delete Drink</h4>
    </div>
    <div class="d-flex justify-content-center mb-4">
        <a href="/Drinks/Index" class="back-to-list mx-4">Back to Drink List</a>
    </div>
    <form action="/Drinks/Delete" method="post">
        <input hidden type="number" name="id" value="@Model?.Id"/>
        <div class="form-group row">
            <div class="form-group col-md-6 form-control-lg">
                <label for="Name">Drink Name:</label>
                <input type="text" id="Name" name="Name" class="form-control" required readonly value="@Model?.Name"/>
            </div>
        </div>
        <div class="form-group row">
            <div class="form-group col-md-6 form-control-lg">
                <label for="IsAlcoholic">Is Alcoholic:</label>
                <input type="text" id="IsAlcoholic" name="IsAlcoholic" class="form-control" required readonly value="@Model?.IsAlcoholic.ToString()"/>
            </div>
        </div>
        <div class="form-group row">
            <div class="form-group col-md-6 form-control-lg">
                <label for="AmountOfStock">Amount Of Stock:</label>
                <input type="number" id="AmountOfStock" name="AmountOfStock" class="form-control" required
                     readonly  value="@Model?.AmountOfStock"/>
            </div>
        </div>
        <div class="mx-1 my-4">
            <button type="submit" class="button-save">Delete Drink</button>
        </div>
    </form>
</div>