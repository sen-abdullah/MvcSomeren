@model MvcSomeren.Models.LecturerSupervisorViewModel

@{
    ViewData["Title"] = "Delete Order";
}

<div>
    <div class="d-flex justify-content-center mr-6 my-lg-5">
        <h4>Delete Order</h4>
    </div>
    <div class="d-flex justify-content-center mb-4">
        <a href="/DrinkOrder/Index" class="back-to-list mx-4">Back to Order List</a>
    </div>
    <form asp-action="DeleteSupervisor" asp-controller="LecturerSupervisor" method="post">
        <input hidden type="number" name="id" value="@Model?.Supervisor.SupervisorId" />
        <div class="form-group row">
            <div class="form-group col-md-6 form-control-lg">
                <label for="Name">Lecturer:</label>
                <input type="text" id="Name" name="Name" class="form-control" required readonly value="@Model?.Lecturers[0].FirstName - @Model?.Lecturers[0].LastName - @Model?.Lecturers[0].Age - @Model?.Lecturers[0].PhoneNumber - Room(@Model?.Lecturers[0].RoomId)"/>
            </div>
        </div>
        <div class="form-group row">
            <div class="form-group col-md-6 form-control-lg">
                <label for="Activity">Activity</label>
                <input type="text" id="Activity" name="Activity" class="form-control" required readonly value="@Model?.Activities[0].ActivityName - @Model?.Activities[0].Date - (@Model?.Activities[0].Time)"/>
            </div>
        </div>
        <div class="form-group row">
            <div class="form-group col-md-6 form-control-lg">
                <label for="SupervisingDate">SupervisingDate:</label>
                <input type="number" id="SupervisingDate" name="SupervisingDate" class="form-control" required
                       readonly  value="@Model?.Supervisor.SupervisingDate"/>
            </div>
        </div>
        <div class="mx-1 my-4">
            <button type="submit" class="button-save">Delete Supervisor</button>
        </div>
    </form>
</div>