@model List<MvcSomeren.Models.Supervisor>


@{
    ViewData["Title"] = "Supervisors Page";
}

<div class="text-center">
    <h1 class="display-4">Supervisors</h1>
    <a href="/Supervisors/Create" class="button-create" role="button"><span class="text">Create New</span><span>Create New</span></a>
    <p>Number of supervisors in the list: @Model.Count</p>
    <form method="get" action="@Url.Action("Filter")">
        <div class="form-group py-2">
            <label for="lastName">Last Name:</label>
            <input type="text" class="form-control" id="lastName" name="lastName" />
        </div>
        <button type="submit" class="btn btn-primary">Filter</button>
    </form>
    <table class="table table-hover">
        <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone Number</th>
            <th>Age</th>
            <th>Room</th>
            <th>Supervising Date</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @{
            foreach (var supervisor in Model)
            {
                <tr>
                    <td>@supervisor.FirstName</td>
                    <td>@supervisor.LastName</td>
                    <td>@supervisor.PhoneNumber</td>
                    <td>@supervisor.Age</td>
                    <td>@supervisor.RoomId</td>
                    <td>@supervisor.SupervisingDate</td>
                    <td>@supervisor.SupervisorId</td>
                    <td>@supervisor.ActivityId</td>
                    <td>@supervisor.LecturerId</td>
                    <td>
                        <a href="/Supervisor/Edit/@supervisor.Id" class="button-edit">Edit</a>
                        <a href="/Supervisor/Delete/@supervisor.Id" class="button-delete">Delete</a>
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
</div>