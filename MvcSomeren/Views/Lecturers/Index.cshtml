@model List<MvcSomeren.Models.Lecturer>

@{
    ViewData["Title"] = "Lecturers Page";
}

<div class="text-center">
    <h1 class="display-4">Lecturers</h1>
    <a href="/Lecturers/Create" class="button-create" role="button"><span class="text">Create New</span><span>Create New</span></a>
    <p>Number of lecturers in the list: @Model.Count</p>
    <form method="get" action="@Url.Action("Filter")">
        <div class="form-group py-2">
            <label for="lastName">Last Name:</label>
            <input type="text" class="form-control" id="lastName" name="lastName" />
        </div>
        <button type="submit" class="btn btn-primary">Filter</button>
    </form>
    <table class="table table-hover">
        <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone Number</th>
            <th>Age</th>
            <th>Room</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @{
            foreach (var lecturer in Model)
            {
                <tr>
                    <td>@lecturer.FirstName</td>
                    <td>@lecturer.LastName</td>
                    <td>@lecturer.PhoneNumber</td>
                    <td>@lecturer.Age</td>
                    <td>@lecturer.RoomId</td>
                    <td>
                        <a href="/Lecturers/Edit/@lecturer.Id"  class="button-edit">Edit</a>
                        <a href="/Lecturers/Delete/@lecturer.Id" class="button-delete">Delete</a> 
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
</div>