@model MvcSomeren.Models.Participator
@{
    ViewData["Title"] = "Create Participator";
}

<div>
<div class="d-flex justify-content-center mr-6 my-lg-5">
    <h4>Edit Participator</h4>
</div>

<div class="d-flex justify-content-center mb-4">
    <a href="/Participators/Index" class="back-to-list mx-4">Back to Participator List</a>
</div>
    <form action="/Drinks/Edit" method="post">
        <input hidden type="number" name="id" value="@Model?.ParticipatorId" />
        <div class="form-group row">
            <div class="form-group col-md-6 form-control-lg">
                <label for="ParticipateDate">Participate Date:</label>
                <input type="text" id="ParticipateDate" name="ParticipateDate" class="form-control" required value="@Model?.ParticipateDate" />
            </div>
        </div>

        <div class="form-group row">
            <div class="form-group col-md-6 form-control-lg">
                <label for="StudentId">Student Id:</label>
                <input type="number" id="StudentId" name="StudentId" class="form-control" required value="@Model?.StudentId" />
            </div>
        </div>

        <div class="form-group row">
            <div class="form-group col-md-6 form-control-lg">
                <label for="ActivityId">Activity Id:</label>
                <input type="number" id="ActivityId" name="ActivityId" class="form-control" required value="@Model?.ActivityId" />
            </div>
        </div>

        <div class="mx-1 my-4">
            <button type="submit" class="button-save">Save Drink</button>
        </div>
    </form>
</div>
