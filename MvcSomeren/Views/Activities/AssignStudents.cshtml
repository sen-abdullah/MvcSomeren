@model MvcSomeren.Models.ManageActivityViewModel

@{
    ViewData["Title"] = "Assign Student to Activity";
    var activity = ViewBag.Activity as MvcSomeren.Models.Activity;
    var students = ViewBag.Students as List<MvcSomeren.Models.Student>;
}

<h2>Assign student to: @activity.ActivityName</h2>

<form asp-action="AssignStudents" method="post">
    <input type="hidden" name="activityId" value="@ViewBag.ActivityId" />

    <div class="form-group">
        <label for="studentId">Select Student:</label>
        <select name="studentId" class="form-control" required>
            @foreach (var student in students)
            {
                <option value="@student.StudentId">@student.StudentFirstName @student.StudentLastName</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-success mt-3">Assign</button>
</form>
