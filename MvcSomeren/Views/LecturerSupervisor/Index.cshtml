@model MvcSomeren.Models.LecturerSupervisorViewModel

@{
    ViewData["Title"] = "Supervisor Management";
}

<div class="text-center pb-5">
    <h1 class="display-4 py-lg-5 m-2">Supervisors Management</h1>
    <hr class="m-xxl-5">
    <h1 class="display-5 my-4 p-2">Supervisors</h1>
    <a href="/LecturerSupervisor/Create" class="button-create m-2" role="button">
        <span class="text">Create Supervisor</span>
        <span>Create Supervisor</span>
    </a>
    <table class="table table-hover my-4">
        <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone Number</th>
            <th>Age</th>
            <th>Room Id</th>
            <th>Activity Name</th>
            <th>Date</th>
            <th>Time</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @{
            for (var i = 0; i < Model.Activities.Count; i++)
            {
                <tr>
                    <td>@Model.Lecturers[i].FirstName</td>
                    <td>@Model.Lecturers[i].LastName</td>
                    <td>@Model.Lecturers[i].PhoneNumber</td>
                    <td>@Model.Lecturers[i].Age</td>
                    <td>@Model.Lecturers[i].RoomId</td>
                    <td>@Model.Activities[i].ActivityName</td>
                    <td>@Model.Activities[i].Date</td>
                    <td>@Model.Activities[i].Time</td>
                    <td>
                        <a href="/LecturerSupervisor/Edit/@Model.AllSupervisors[i].SupervisorId" class="button-edit">Edit</a>
                        <a href="/LecturerSupervisor/Delete/@Model.AllSupervisors[i].SupervisorId" class="button-delete">Delete</a>
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
    <hr class="m-xxl-5">
    <h1 class="my-4 p-2 fs-1">All Lecturers Available</h1>
    <table class="table table-hover">
        <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone Number</th>
            <th>Age</th>
            <th>Room Id</th>
        </tr>
        </thead>
        <tbody>
        @{
            foreach (var lecturer in Model.AllLecturers)
            {
                <tr>
                    <td>@lecturer.FirstName</td>
                    <td>@lecturer.LastName</td>
                    <td>@lecturer.PhoneNumber</td>
                    <td>@lecturer.Age</td>
                    <td>@lecturer.RoomId</td>
                </tr>
            }
        }
        </tbody>
    </table>
    <hr class="m-xxl-5">
    <h1 class="my-4 p-2 fs-1">All Activities</h1>
    <table class="table table-hover">
        <thead>
        <tr>
            <th>Activity Name</th>
            <th>Date</th>
            <th>Time</th>
        </tr>
        </thead>
        <tbody>
        @{
            foreach (var activity in Model.AllActivities)
            {
                <tr><td>@activity.ActivityName</td>
                    <td>@activity.Date</td>
                    <td>@activity.Time</td>
                </tr>
            }
        }
        </tbody>
    </table>
</div>